{
  "manifest_version": 3,
  "name": "Color Picker",
  "version": "0.1",
  "author": "Aditya",
  "description": "This extension will help you select colors from a website.",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
 
  "background": {
    "service_worker": "background.js"
  },
  
  "icons":{
    "16": "icons/picker_16.png",
    "32": "icons/picker_32.png",
    "48": "icons/picker_48.png"
  },
  
  
  "action": {
    "default_title": "Color Picker",
    "default_popup": "popup.html"
  }
}
